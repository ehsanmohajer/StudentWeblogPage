<!DOCTYPE html>
<html lang="en">
<head>

  <%- include('../layouts/head', { title: 'Home | weblog' }) %>

  <script src="/js/script.js" defer></script>

</head>
<body>

  <%- include('../partials/top_app_bar') %>

  <main class="main">

    <article class="page home-page">
      <div class="container">
        <h2 class="headline-small page-title text-on-surface">
          Latest blogs
        </h2>
        <div class="blog-list">
          <% if (locals.latestBlogs.length) { %>
            <% locals.latestBlogs.forEach(blog => { %>
              <%- include('../partials/card', { blog }) %>
            <% }) %>
          <% } %>
        </div>
        <% if (locals.pagination.next || locals.pagination.prev) { %>
          <%- include('../partials/pagination') %>
        <% } %>
      </div>
    </article>
  </main>

  <%- include('../layouts/footer') %>

</body>
</html>
